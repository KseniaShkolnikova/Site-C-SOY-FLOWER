@model IEnumerable<Pervieproekt.Models.PosOrder>
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Корзина</title>
    <style>
        .cart-container {
            padding: 30px;
            max-width: 1200px;
            margin: 30px auto;
        }

        .cart-item {
            display: flex;
            justify-content: space-between;
            background-color: #2c2c2c;
            border-radius: 8px;
            border: 1px solid #444;
            margin-bottom: 15px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

            .cart-item:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            }

            .cart-item img {
                width: 80px;
                height: 80px;
                object-fit: cover;
                border-radius: 8px;
            }

        .cart-item-details {
            flex-grow: 1;
            margin-left: 20px;
        }

            .cart-item-details h3 {
                font-size: 18px;
                color: #fff;
                margin: 0;
                margin-bottom: 5px;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
            }

            .cart-item-details p {
                font-size: 14px;
                color: #ccc;
                margin-bottom: 10px;
            }

        .cart-item-actions {
            display: flex;
            align-items: center;
            gap: 10px; 
        }

            .cart-item-actions input[type="number"] {
                width: 50px;
                padding: 5px;
                margin-right: 10px;
                background-color: #444;
                color: white;
                border: 1px solid #444;
                border-radius: 5px;
                font-size: 14px;
            }

            .cart-item-actions button {
                background-color: #911300;
                color: white;
                padding: 10px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 14px;
                transition: background-color 0.3s;
                visibility: hidden; 
            }

                .cart-item-actions button:hover {
                    background-color: #a6372a;
                }

                .cart-item-actions button.delete-button {
                    visibility: visible; 
                    background-color: #444; 
                    color: #fff;
                    padding: 10px 15px;
                    border-radius: 5px;
                    font-size: 14px;
                }

                    .cart-item-actions button.delete-button:hover {
                        background-color: #666; 
                    }

        .cart-summary {
            background-color: #2c2c2c;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #444;
            text-align: right;
            margin-top: 30px;
        }

            .cart-summary h3 {
                font-size: 24px;
                color: #fff;
                margin: 0 0 10px;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
            }

            .cart-summary .total-price {
                font-size: 28px;
                color: #fff;
                font-weight: bold;
                margin-bottom: 20px;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
            }

            .cart-summary .checkout-button {
                background-color: #911300;
                color: white;
                padding: 15px 30px;
                border: none;
                border-radius: 5px;
                font-size: 18px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .cart-summary .checkout-button:hover {
                    background-color: #a6372a;
                }

    </style>
</head>
<body>

    @if (!Model.Any())
    {
        <p class="empty-cart-message">Корзина пуста</p>
    }
    else
    {
        <div class="cart-container">
            @foreach (var posOrder in Model)
            {
                <div class="cart-item">
                    <img src="~/lib/images/@posOrder.Catalog.Img" alt="@posOrder.Catalog.Namee">
                    <div class="cart-item-details">
                        <h3>@posOrder.Catalog.Namee</h3>
                        <p>@posOrder.Catalog.Price руб</p>
                    </div>
                    <form asp-action="AddCount" method="post" class="cart-form">
                        <div class="cart-item-actions">
                            <input type="number" class="number" name="quantiti" value="@posOrder.Countt" min="1" max="100" data-id="@posOrder.IdPosOrders">
                            <input type="hidden" name="productId" value="@posOrder.IdPosOrders" />
                            <button name="update"></button>
                        </div>
                    </form>
                    <form asp-action="Delete" method="post">
                        <div class="cart-item-actions">
                            <input type="hidden" name="productId" value="@posOrder.IdPosOrders" />
                            <button type="submit" class="delete-button">Удалить</button>
                        </div>
                    </form>
                </div>
            }

            <div class="cart-summary">
                <h3>Итого</h3>

                @{
                    var totalPrice =  Model.Sum(item => item.Catalog.Price * item.Countt);
                }
                <div class="total-price">@totalPrice руб</div>

                <button class="checkout-button">Перейти к оформлению заказа</button>
            </div>
        </div>
    }

    <script>
        document.querySelectorAll('.number').forEach(input => {
            input.addEventListener('input', function () {
                var form = this.closest('form');
                var button = form.querySelector('button[name="update"]');
                button.click();
            });
        });
    </script>
</body>
</html>
