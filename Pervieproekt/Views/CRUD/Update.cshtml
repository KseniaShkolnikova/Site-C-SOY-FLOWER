@model Pervieproekt.Models.Catalogg
@{
    ViewData["Tittle"] = "Edit";
}
<h1>Изменение</h1>
<hr />
<form asp-action="Update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdCatalog" />
    <div class="form-group">
        <label asp-for="Namee">Имя</label>
        <input type="text" asp-for="Namee" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Цена</label>
        <input type="number" asp-for="Price" />
    </div>
    <div class="form-group">
        <label asp-for="Information">Информация</label>
        <input type="text" asp-for="Information" />
    </div>
    <div class="form-group">
        <label asp-for="Img">Картинка</label>
        <input type="text" asp-for="Img" />
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>
</form>
